      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:AirAtlantique.Vue"
      mc:Ignorable="d" 
      Title="Flights">

    <ScrollViewer VerticalScrollBarVisibility="Auto" >
        <Grid Background="White" >
            <StackPanel>
                <Label Foreground="Black" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"  >Tous Les vols</Label>




                <!--<Button Click="AddFlyModalClick" Content="Ajouter un avion" HorizontalAlignment="Center" VerticalAlignment="Top"  Background="#FF5454F7"  BorderBrush="Transparent"/>-->
                <ListView  x:Name="gridFlights" Width="auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding Id}" Header="id du vol" Width="auto" />
                            <GridViewColumn DisplayMemberBinding="{Binding Plane.Warehouse.Airport.City.Name}" Header="Type d'avion en vol" Width="auto"/>
                            <GridViewColumn DisplayMemberBinding="{Binding AvailablePlaces}" Header="Nombre de places disponible" Width="auto" />
                            <GridViewColumn Header="" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button  BorderBrush="Transparent" Content="Supprimer" Tag="{Binding IdPlane}" Click="deleteFlight" Background="#FF5454F7" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>










