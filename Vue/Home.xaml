<Page x:Class="AirAtlantique.Vue.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirAtlantique"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="false" Height="400" Width="750" HorizontalAlignment="Center" VerticalAlignment="Center" Name="gridPlanes">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Id" Binding="{Binding IdPlane, Mode=OneWay}" />
            <DataGridTextColumn Header="Nom" Binding="{Binding Name, Mode=TwoWay}" />
            <DataGridTextColumn Header="Nombre de sièges" Binding="{Binding Nb_Seat, Mode=TwoWay}" />
        </DataGrid.Columns>
    </DataGrid>

</Page>
